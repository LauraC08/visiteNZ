{% extends 'base.html.twig' %}

{% block title %}{{ parent () }} | {{ 'Edit Experience' | trans }}{% endblock %}

{% block body %}
    <h2>{{ 'Edit Experience' | trans }}</h2>
    {{ include('experience/_form.html.twig', {'button_label': 'Update' }) }}
    <a href="{{ path('app_experience') }}" class="button btn">{{ 'Back to list'| trans }}</a>
    <form method="post" action="{{ path('app_experience_delete', {'id': experience.id}) }}" onsubmit="return confirm( 'Are you sure you want to delete this item?' );">
        <button class="btn button">{{ 'Delete' | trans }}</button>
    </form>

{% endblock %}