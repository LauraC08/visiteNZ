{% extends 'base.html.twig' %}

{% block title %}{{ parent () }} | Our Experiences{% endblock %}

{% block body %}
<div class="experiences">
    <h1>Experiences page</h1>
    <a href="{{ path('app_experience_new')}}" class=" btn button">Add</a>
    {% for experience in experiences %}
        <div class="card">
            <img src="{{ experience.imgUrl }}" alt="{{ experience.title }}">
            <h3>{{ experience.title | upper }}</h3>
            <p>{{ experience.price }}â‚¬/day</p>
            <a href="{{ path('app_experience_details', {'id' : experience.id }) }}" class=" btn button">See More</a>
            <a href="{{ path('app_experience_edit', {'id' : experience.id }) }}" class=" btn button">Edit</a>
        </div>
    {% endfor %}
</div>
{% endblock %}
