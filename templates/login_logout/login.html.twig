{% extends 'base.html.twig' %}

{% block title %}{{ parent () }} | Login{% endblock %}

{% block body %}
    <div class="login">
    {% if errors %}
        <div>{{ errors.messageKey|trans(errors.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <p>{{ 'Only administrator can log-in. Don\'t bother trying if your not one.' | trans }}</p>
        <label for="email" class="form-label">{{ 'Email' | trans }}  </label>
        <input type="text" class="form-control" id="email" name="_username"/>

        <label for="password" class="form-label">{{ 'Password' | trans }}</label>
        <input type="password" id="password" name="_password" class="form-control"/>

        {# CSRF protection #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

       <input type="hidden" name="_target_path" value="/en/admin"/>
        <div class="button-cont">
            <button type="submit" class="button btn">{{ 'Login' | trans }}</button>
        </div>
    </form>
    </div>
{% endblock %}
