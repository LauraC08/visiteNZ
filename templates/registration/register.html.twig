{% extends 'base.html.twig' %}

{% block title %}{{ parent () }} | Add an Admin{% endblock %}

{% block body %}
    <div class="register container mt-5 mb-5">
    {{ form_start(registrationForm) }}
    <h2>Add an Admin</h2>
    {{ form_widget(registrationForm) }}
        <div class="btn-ctr">
            <button class="btn button">{{ button_label|default('Register') }}</button>
        </div>
    {{ form_end(registrationForm) }}
        <a href="{{ path('app_admin') }}" class="button btn">{{ 'Back to list'| trans }}</a>
    </div>
{% endblock %}
